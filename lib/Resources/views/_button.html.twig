{% if data.currentAction == 'show' %}
	{% if data.links.index.url != '#' %}
		{% include '@MazariniBootstrap/button/link.html.twig' with { 'link': data.links.index } %}
	{% endif %}
	{% if data.links.edit.url != '#' %}
		{% include '@MazariniBootstrap/button/link.html.twig' with { 'link': data.links.edit } %}
		{% include '@MazariniBootstrap/button/toggle.html.twig' with { 'label': 'Delete', 'target': 'modalDeleteId' } %}
	{% endif %}
{% else %}
	<button class="btn btn-primary" type="submit">Validate</button>
	{% if data.entity.isNew %}
		{% include '@MazariniBootstrap/button/link.html.twig' with { 'link': data.links.index, 'label': 'Cancel' } %}
	{% else %}
		{% include '@MazariniBootstrap/button/link.html.twig' with { 'link': data.links.show, 'label': 'Cancel' } %}
	{% endif %}
{% endif %}
